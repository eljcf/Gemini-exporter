{
    "manifest_version": 3,
    "name": "Gemini-exporter",
    "version": "1.0",
    "description": "支持全量回溯与MD/JSON格式导出的 Gemini 插件",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}